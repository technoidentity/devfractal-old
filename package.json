  "name": "root",
  "private": true,
  "workspaces": [
    "packages/apps/*",
    "packages/common/*",
    "packages/devfractal/*",
    "packages/meta/*",
    "packages/sites/site"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean:all": "yarn clean && yarn lerna clean && yarn run rimraf node_modules",
    "clean": "lerna exec -- yarn run rimraf dist .cache build .rts2_cache_* && yarn dev:clean",
    "destroy": "git clean -dfx",
    "dev:build:watch": "yarn tsc -b -w packages",
    "dev:build": "yarn tsc --build packages",
    "dev:clean": "yarn tsc --build --clean packages",
    "dev:test:watch": "yarn jest --watch",
    "dev:test": "yarn jest",
    "dev": "yarn clean && yarn && yarn dev:build:watch",
    "lint:fix": "lerna run lint:fix",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "up": "ncu -u && lerna exec -- ncu -u",
    "validate:noFix": "lerna run validate:noFix",
    "validate": "lerna run validate"
  },
