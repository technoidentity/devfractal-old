{
  "extends": ["tslint-react", "tslint-config-prettier", "tslint-immutable"],
  "rules": {
    "ban": false,
    "adjacent-overload-signatures": true,
    "class-name": true,
    "max-classes-per-file": false,
    "no-angle-bracket-type-assertion": true,
    "comment-format": [true, "check-space"],
    "curly": true,
    "eofline": false,
    "forin": true,
    "indent": [true, "spaces"],
    "interface-name": [true, "never-prefix"],
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "jsx-boolean-value": false,
    "jsx-no-string-ref": true,
    "jsx-key": true,
    "label-position": true,
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "public-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method",
          "private-static-field",
          "private-instance-field",
          "private-constructor"
        ]
      }
    ],
    "no-default-export": true,
    "no-any": false,
    "no-arg": true,
    "no-console": false,
    "no-bitwise": true,
    "no-consecutive-blank-lines": true,
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-shadowed-variable": false,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "switch-final-break": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-string-throw": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [
      true,
      "parameter",
      "property-declaration",
      "call-signature",
      "member-variable-declaration"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "object-literal-shorthand": true,
    "prefer-for-of": true,
    "prefer-const": true,
    "no-var-keyword": true,
    "use-isnan": true,
    "no-invalid-this": true,
    "no-parameter-reassignment": true,
    "ban-comma-operator": true,
    "readonly-keyword": [true, "ignore-local", { "ignore-prefix": "mutable" }],
    "readonly-array": [
      true,
      "ignore-local",
      { "ignore-rest-parameters": true }
    ],
    "no-array-mutation": [
      true,
      "ignore-mutation-following-accessor",
      { "ignore-prefix": "draft" }
    ],
    "no-object-mutation": [true, { "ignore-prefix": "draft" }],
    "no-let": [true, "ignore-local"],
    "no-delete": true,
    "no-misused-new": true,
    "interface-over-type-literal": true,
    "array-type": [true, "array-simple"],
    "no-inferred-empty-object-type": true,
    "no-dynamic-delete": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-unbound-method": true,
    "no-unnecessary-class": true,
    "no-parameter-properties": true,
    "prefer-function-over-method": true,
    "prefer-switch": true,
    "prefer-while": true,
    "number-literal-format": true,
    //"no-loop-statement": true,
    "promise-function-async": true,
    "await-promise": true,
    "no-return-await": true,
    "restrict-plus-operands": true,
    "no-non-null-assertion": true,
    "prefer-method-signature": true,
    "return-undefined": true,
    "use-default-type-parameter": true,
    "import-blacklist": [true, "rxjs"],
    "no-boolean-literal-compare": true,
    "no-floating-promises": true,
    "no-invalid-template-strings": true,
    "no-object-literal-type-assertion": true,
    "no-sparse-arrays": true,
    "no-this-assignment": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    "no-for-in-array": true,
    "arrow-return-shorthand": true,
    "binary-expression-operand-order": true,
    "callable-types": true,
    "new-parens": true,
    "prefer-conditional-expression": true,
    "prefer-object-spread": true,
    "prefer-template": true,
    "type-literal-delimiter": false,
    "trailing-comma": true,
    "no-null-keyword": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "no-unsafe-finally": true
    // "no-unsafe-any": true,
    // "file-name-casing": [true, { ".tsx": "pascal-case", ".ts": "camel-case" }],
    // "no-this": true,
    // "no-class": true
  },

  "linterOptions": {
    "exclude": [
      "src/devfractal/build/**",
      "src/devfractal/.rts2*/**",
      "src/devfractal/node_modules/**"
    ]
  },
  "defaultSeverity": "warn"
}
