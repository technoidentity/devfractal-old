{
  "extends": ["tslint-react", "tslint-config-prettier", "tslint-immutable"],
  "rules": {
    "align": [true, "parameters", "arguments", "statements"],
    "ban": false,
    "adjacent-overload-signatures": true,
    "class-name": true,
    "max-classes-per-file": false,
    "no-angle-bracket-type-assertion": true,
    "comment-format": [true, "check-space"],
    "curly": true,
    "eofline": false,
    "forin": true,
    "indent": [true, "spaces"],
    "interface-name": [true, "never-prefix"],
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "label-position": true,
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "public-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method",
          "private-static-field",
          "private-instance-field",
          "private-constructor"
        ]
      }
    ],
    "no-default-export": true,
    "no-any": false,
    "no-arg": true,
    "no-console": [true, "log"],
    "no-bitwise": true,
    "no-consecutive-blank-lines": true,
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-shadowed-variable": false,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-string-throw": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "radix": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true, "parameter", "property-declaration", "call-signature"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "object-literal-shorthand": true,
    "prefer-for-of": true,
    "prefer-const": true,
    "no-var-keyword": true,
    "use-isnan": true,
    "no-invalid-this": true,
    "no-parameter-reassignment": true,

    "readonly-keyword": [true, { "ignore-prefix": "mutable" }],
    "readonly-array": [true, { "ignore-rest-parameters": true }],
    "no-let": true,
    "no-array-mutation": true,
    "no-object-mutation": true,
    "no-method-signature": true,
    "no-delete": true,
    "no-this": true,
    // "no-class": true,
    "no-expression-statement": [true, { "ignore-predix": "console." }],
    "no-loop-statement": true,

    "restrict-plus-operands": true,
    "no-non-null-assertion": true,
    "prefer-method-signature": true,
    "return-undefined": true,
    "use-default-type-parameter": true,
    "import-blacklist": [true, "rxjs"],
    "no-boolean-literal-compare": true,
    "no-floating-promises": true,
    "no-invalid-template-strings": true,
    "no-object-literal-type-assertion": true,
    "no-sparse-arrays": true,
    "no-this-assignment": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    "no-for-in-array": true,
    "arrow-return-shorthand": true,
    "binary-expression-operand-order": true,
    "callable-types": true,
    "new-parens": true,
    "prefer-conditional-expression": true,
    "prefer-object-spread": true,
    "prefer-template": true,
    "type-literal-delimiter": false,
    "trailing-comma": true,
    "ordered-imports": false
  },

  "defaultSeverity": "warn"
}
